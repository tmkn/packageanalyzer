    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Jest Tests",
            "type": "node",
            "request": "launch",
            "runtimeArgs": [
              "--inspect-brk",
              "${workspaceRoot}/node_modules/.bin/jest",
              "--runInBand",
              "folderProvider"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
          },

        {
            "type": "node",
            "request": "launch",
            "name": "Analyze Webpack",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/build/src/cli.js",
            "args": [
                "analyze",
                "--package",
                "webpack"
            ],
            "preLaunchTask": "tsc: build - tsconfig.json",
            "outFiles": [
                "${workspaceFolder}/build/**/*.js"
            ],
            "console" : "integratedTerminal"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Sample Report",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/build/src/cli.js",
            "args": [
                "report",
                "--config",
                "./tests/sampleReport.js"
            ],
            "preLaunchTask": "tsc: build - tsconfig.json",
            "outFiles": [
                "${workspaceFolder}/build/**/*.js"
            ],
            "console" : "integratedTerminal"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Test Command",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/build/src/cli.js",
            "args": [
                "test",
                "--package",
                "react"
            ],
            //"preLaunchTask": "tsc: build - tsconfig.json",
            "outFiles": [
                "${workspaceFolder}/build/**/*.js"
            ],
            "console" : "integratedTerminal"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Custom Report",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/build/src/cli.js",
            "args": [
                "report",
                "--config",
                "testReport.js"
            ],
            "preLaunchTask": "tsc: build - tsconfig.json",
            "outFiles": [
                "${workspaceFolder}/build/**/*.js"
            ],
            "console" : "integratedTerminal"
        }
    ]
}