{
  "name": "packageanalyzer",
  "version": "1.0.0-beta0",
  "description": "A tool to analyze a Node.js project/package",
  "main": "./build/src/cli.js",
  "files": [
    "/build/src/**/*.js"
  ],
  "bin": {
    "npa": "./build/src/cli.js"
  },
  "scripts": {
    "build": "node utility/clean.js && tsc",
    "dev": "tsc --watch",
    "test": "mocha",
    "test:watch": "tsc && mocha --watch",
    "test:coverage": "nyc npm test",
    "test:clean": "node build/tests/clean.js",
    "prettier": "prettier --write \"{src,tests,utility}/**/{*.ts,*.js}\"",
    "cli": "node build/src/cli.js",
    "preview": "npm pack && tar -xvzf *.tgz && rm -rf package *.tgz",
    "lint": "eslint \"src/**\" \"tests/**\"",
    "lint:fix": "eslint \"src/**\" \"tests/**\" --fix"
  },
  "author": "tmkn",
  "license": "MIT",
  "devDependencies": {
    "@types/express": "^4.17.0",
    "@types/mocha": "^5.2.6",
    "@types/node": "^11.13.2",
    "@types/semver": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^2.2.0",
    "@typescript-eslint/parser": "^2.2.0",
    "eslint": "^6.3.0",
    "express": "^4.17.1",
    "mocha": "^6.1.4",
    "nyc": "^14.1.1",
    "prettier": "^1.18.2",
    "typescript": "^3.6.2"
  },
  "dependencies": {
    "dayjs": "^1.8.15",
    "ora": "^3.4.0",
    "semver": "^6.0.0"
  }
}
