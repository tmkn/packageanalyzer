{
    "name": "@tmkn/packageanalyzer",
    "version": "0.9.16",
    "type": "module",
    "description": "A framework to introspect Node.js packages",
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": "./dist/index.js",
        "./web": "./dist/index.web.js"
    },
    "typesVersions": {
        "*": {
            "web": [
                "./dist/index.web.d.ts"
            ]
        }
    },
    "files": [
        "dist"
    ],
    "bin": {
        "pkga": "dist/cli.js"
    },
    "scripts": {
        "build": "tsdown",
        "dev": "tsdown --sourcemap --watch ./src",
        "typecheck": "tsc -b --watch",
        "typecheck:ci": "tsc -b",
        "test": "vitest run",
        "test:watch": "vitest",
        "test:coverage": "vitest run --coverage",
        "test:update": "vitest run --update",
        "test:exports": "node ./dist/cli.js lint --package react ./packages/node/tests/exportTest.js",
        "prettier": "prettier --write \"{apps,packages}/**/{*.ts,*.js,*.mts}\" webpack.web.config.cjs vitest.config.mts tsdown.config.mts",
        "pa": "node dist/cli.js",
        "preview": "npm pack && tar -xvzf *.tgz && rm -rf package *.tgz",
        "lint": "eslint \"packages/**/*.{ts,tsx}\" \"apps/**/*.{ts,tsx}\"",
        "lint:fix": "eslint \"src/**\" \"tests/**\" --fix",
        "lint:web": "node ./webpack.web.config.cjs",
        "prepublishOnly": "npm run build",
        "publish:test": "npm publish --dry-run"
    },
    "author": "tmkn",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/tmkn/packageanalyzer.git"
    },
    "keywords": [
        "package",
        "analyzer",
        "dependency",
        "tree",
        "lint"
    ],
    "bugs": {
        "url": "https://github.com/tmkn/packageanalyzer/issues"
    },
    "devDependencies": {
        "@eslint/js": "^9.34.0",
        "@types/express": "^5.0.6",
        "@types/lodash": "^4.17.21",
        "@types/node": "^24.3.2",
        "@types/semver": "^7.7.1",
        "@types/spdx-satisfies": "^6.0.0",
        "@types/tar": "^6.1.13",
        "@vitest/coverage-v8": "^3.2.4",
        "eslint": "9.34.0",
        "express": "^5.2.1",
        "globals": "^17.3.0",
        "memory-fs": "^0.5.0",
        "nock": "^14.0.10",
        "prettier": "^3.8.1",
        "ts-loader": "^9.5.4",
        "tsdown": "^0.20.1",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.42.0",
        "vitest": "^3.2.4",
        "webpack": "^5.105.0"
    },
    "dependencies": {
        "@tanstack/query-core": "^5.90.20",
        "chalk": "^5.6.2",
        "clipanion": "^4.0.0-rc.4",
        "dayjs": "^1.11.19",
        "jiti": "^2.6.1",
        "lodash": "^4.17.23",
        "ora": "^9.3.0",
        "semver": "^7.7.3",
        "spdx-satisfies": "^6.0.0",
        "tar": "^7.5.7",
        "zod": "^4.3.6"
    },
    "engines": {
        "node": ">=18"
    }
}
