{
  "name": "packageanalyzer",
  "version": "0.9.0-beta0",
  "description": "A tool to analyze a Node.js project/package",
  "main": "./build/src/cli.js",
  "files": [
    "/build/src/**/*.js"
  ],
  "bin": {
    "npa": "./build/src/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:clean": "node build/tests/clean.js",
    "prettier": "prettier --write \"{src,tests,utility}/**/{*.ts,*.js}\"",
    "cli": "node build/src/cli.js",
    "preview": "npm pack && tar -xvzf *.tgz && rm -rf package *.tgz",
    "lint": "eslint \"src/**\" \"tests/**\"",
    "lint:fix": "eslint \"src/**\" \"tests/**\" --fix"
  },
  "author": "tmkn",
  "license": "MIT",
  "devDependencies": {
    "@types/express": "^4.17.2",
    "@types/jest": "^24.0.23",
    "@types/node": "^12.12.14",
    "@types/semver": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^2.9.0",
    "@typescript-eslint/parser": "^2.8.0",
    "eslint": "^6.7.1",
    "express": "^4.17.1",
    "jest": "^24.9.0",
    "prettier": "^1.19.1",
    "ts-jest": "^24.2.0",
    "typescript": "3.7.2"
  },
  "dependencies": {
    "dayjs": "^1.8.17",
    "ora": "^4.0.3",
    "semver": "^6.0.0"
  }
}
