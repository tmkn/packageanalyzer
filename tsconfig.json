{
    "compilerOptions": {
        /* Base Options: */
        "rootDir": ".",
        "outDir": "build",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "target": "es2022",
        "allowJs": true,
        "resolveJsonModule": true,
        "moduleDetection": "force",
        "isolatedModules": true,
        "verbatimModuleSyntax": true,
        /* Strictness */
        "strict": true,
        "noImplicitOverride": true,
        /* If transpiling with TypeScript: */
        "module": "NodeNext",
        "sourceMap": true,
        /* AND if you're building for a library: */
        "declaration": true,
        /* If your code doesn't run in the DOM: */
        "lib": ["es2022"],
        "types": []
        // "paths": {
        //     "@packages/shared/*": ["./packages/shared/src/*"],
        //     "@packages/node/*": ["./packages/node/src/*"],
        //     "@packages/web/*": ["./packages/web/src/*"],
        //     "@packages/test-utils/*": ["./packages/test-utils/src/*"]
        // }
    },
    "include": [],
    "references": [
        {
            "path": "./apps/cli/src"
        },
        {
            "path": "./apps/cli/tests"
        },
        {
            "path": "./packages/shared/src"
        },
        {
            "path": "./packages/shared/tests"
        },
        {
            "path": "./packages/node/src"
        },
        {
            "path": "./packages/node/tests"
        },
        {
            "path": "./packages/web/src"
        },
        {
            "path": "./packages/web/tests"
        },
        {
            "path": "./packages/test-utils/src"
        },
        {
            "path": "./packages/test-utils/tests"
        }
    ]
}
